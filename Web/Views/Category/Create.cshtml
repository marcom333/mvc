@model Application.Entities.Category;

@{
    ViewData["Title"] = "Nueva Categoría";
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <h3>Registro de Usuario</h3>
        <hr>
        <form asp-controller="Category" asp-action="Store" method="POST">    
            @Html.AntiForgeryToken()
  
            <div class="mb-3">
                <div class="col-12">
                    <label asp-for="Name" class="form-label">Nombre*:</label>
                    <input asp-for="Name" class="form-control form-control-sm" placeholder="Nombre de la categoría">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>    
            <div class="mb-3">
                <div class="col-12">
                    <label asp-for="Description" class="form-label">Descripción *:</label>
                    <input asp-for="Description" class="form-control form-control-sm" placeholder="Descripción">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <hr>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>