@using Application.Entities
@model List<Application.Entities.Category>;

@{
    ViewData["Title"] = "Categorías";
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="text-left">
    
    <div class="card">
        <div class="card-body">
            <h2 class="d-flex align-items-center">
                <span class="material-symbols-outlined me-1" style="font-size: 40px;">
                    category
                </span>
                Categorías
            </h2>
            <hr>
            <div class="col-12 mb-3">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary d-inline-flex align-items-center">                    
                    <span class="material-symbols-outlined me-1">
                        add
                    </span>
                    Nueva Categoría
                </a>
            </div>
            <hr>
            <table class="table text-center">
                <thead>
                    <tr>
                        <th style="width: 5%;">#</th>
                        <th style="width: 35%;">Nombre</th>
                        <th style="width: 40%;">Descripción</th>
                        <th style="width: 20%;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                    }
                    @foreach(Category category in Model){
                        <tr>
                            <td>@(count++)</td>
                            <td>@category.Name</td>
                            <td>@category.Description</td>
                            <td>
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="1" class="btn btn-success d-inline-flex align-items-center action-btn" 
                                data-toggle="tooltip" data-placement="top" title="Editar Categoría">
                                    <span class="material-symbols-outlined me-1">
                                        edit_document
                                    </span>
                                </a>                                
                                <a class="btn btn-danger d-inline-flex align-items-center action-btn" 
                                data-toggle="tooltip" data-placement="top" title="Eliminar Categoría">
                                    <span class="material-symbols-outlined me-1">
                                        delete
                                    </span>
                                </a>                          
                                <a asp-controller="Category" asp-action="Details" asp-route-id="1" class="btn btn-light d-inline-flex align-items-center action-btn" 
                                data-toggle="tooltip" data-placement="top" title="Detalles Categoría" style="border: 1px solid;">
                                    <span class="material-symbols-outlined me-1">
                                        visibility
                                    </span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>    
        </div>
    </div>
</div>
