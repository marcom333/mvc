@using Application.Entities
@model Product


<div class="card">
    <div class="card-body">
        <h1 class="border-bottom border-2 border-success">Add new product</h1>
        <form asp-action="Create" method="post">
            <div>
                <div class="my-2">
                    <div>Product name:</div>
                    <input type="text" asp-for="@Model.Name">
                </div>
                <div class="my-2">
                    <div>Description:</div>
                    <input type="text" asp-for="@Model.Name">
                </div>
                <div class="my-2">
                    <div>Price</div>
                    <input type="text" asp-for="@Model.Name">
                </div>
                <div class="my-2">
                    <div>Category</div>
                    <select class="form-select">
                        @for(int i = 0; i<10; i++){
                            <option value=@i>@i</option>
                        }
                    </select>
                </div>
                <div class="my-2">
                    <div>User</div>
                    <select class="form-select">
                        <option value="Alice">Alice</option>
                        <option value="Bob">Bob</option>
                        <option value="Charlie">Charlie</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
</div>