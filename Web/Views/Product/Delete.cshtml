@using Application.Entities
@using Microsoft.AspNetCore.Components.Forms
@model List<Product>

<table class="table">
    <thead>
        <tr>
            <th colspan=3>Nombre</th>
        </tr>
        
    </thead>
    <tbody>
@foreach(Product product in @Model)
{
    
    <form method="POST" asp-controller = "Product">
        @Html.AntiForgeryToken()
    <tr>
        
        <input hidden name = "id_producto" />
        <td>@product.Name</td>

        <td><button class="btn btn-success" asp-action  = "Update">Actualizar</button></td>
        <td><button class="btn btn-danger" asp-action = "Delete">Borrar</button></td>
    </tr>
    </form>
}

</tbody>
</table>