@using Web.ViewModel
@model ProductDetailViewModel

@if(ViewBag.Error != null){
    <div class="alert alert-warning" role="alert">
        Este producto est√° a punto de agotar existencias.
    </div>
}

<h1 class="border-bottom border-2 border-primary">Product details</h1>

<table>
    <tbody>
        <tr>
            <th>Name</th>
            <td>@Model.Product.Name </td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Product.Description</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.Product.Price</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>@Model.Product.CategoryId</td>
        </tr>
        <tr>
            <th>User</th>
            <td>@Model.Product.UserId</td>
        </tr>
    </tbody>
</table>