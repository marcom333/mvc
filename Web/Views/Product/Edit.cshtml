@model Application.Entities.Product;

@{
    ViewData["Title"] = "Edición Producto";
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-controller="Product" asp-action="Update" method="POST">
    @Html.AntiForgeryToken()

    <input asp-for="Id" type="hidden">

    <div class="mb-3">
        <div class="col-12">
            <label asp-for="Name" class="form-label">Nombre *:</label>
            <input asp-for="Name" class="form-control form-control-sm" placeholder="Nombre del producto">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <div class="col-12">
            <label asp-for="Description" class="form-label">Descripción *:</label>
            <input asp-for="Description" class="form-control form-control-sm" placeholder="Descripción del producto">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <div class="col-12">
            <label asp-for="Price" class="form-label">Precio *:</label>
            <input asp-for="Price" class="form-control form-control-sm" placeholder="Precio del producto">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <div class="col-12">
            <label asp-for="CategoryId" class="form-label">Categoría *:</label>
            <select asp-for="CategoryId" class="form-select form-select-sm">
                <option value="">Selecciona una Categoría</option>
                <option value="1">Category 1</option>
                <option value="2">Category 2</option>
               
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Actualizar</button>
    </div>

</form>
