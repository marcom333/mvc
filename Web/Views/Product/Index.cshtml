@{
    if(ViewBag.user != null){ //Código que quedó con un if de prueba para simular permisos de usuarios
        //Cargar una plantilla diferente a _Layout.cshtml
        Layout = "~/Views/Shared/_Plantilla.cshtml";
    }
    ViewData["Title"] = "Productos";
}

@using Application.Entities
@model List<Product>

@if(ViewBag.Error != null){
    <div class="alert alert-danger" role="alert">
        Este producto está agotado.
    </div>
}

<div class="d-flex rounded">
    <div class="card w-100 bg-secondary-subtle">
        <div class="card-body">
            <a asp-action="Create" asp-controller="Product" class="btn btn-success mb-3">
                Add New Product
            </a>
            <div class="bg-success-subtle px-2 pb-1 rounded border border-success">
                <table class="table table-striped table-success table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(Product p in Model){
                            <tr>
                                <td>@p.Name</td>
                                <td>@p.Price</td>
                                <td>
                                    <a asp-action="Detail" asp-controller="Product" asp-route-id="@p.CategoryId" class="btn btn-warning">Get details</a>
                                    <a asp-action="Update" asp-controller="Product" asp-route-id="@p.CategoryId" class="btn btn-primary">Edit</a>
                                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@p.CategoryId" class="btn btn-danger">Delete</a>
                                </td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>