@{
    if(ViewBag.user != null)
        Layout = "~/Views/Shared/_Plantilla.cshtml";
    ViewData["Title"] = "Productos";
}

@using Application.Entities

@model List<Product>

@if(ViewBag.Error!=null){
    <div class="alert alert-danger" role="alert">
        <strong>danger</strong> @ViewBag.Error
    </div>
}

<h1>Conoce nuestros productos</h1>

<p>
    <a class="btn btn-success" asp-action="Create" asp-controller="Product">Registrar</a>
</p>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Product p in Model){
            <tr>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>
                    <a asp-action="Detail" asp-controller="Product" asp-route-id="@p.ProductId" class="btn btn-primary">Consultar</a>
                    <a asp-action="Update" asp-controller="Product" asp-route-id="@p.ProductId" class="btn btn-warning">Editar</a>
                    <form asp-action="Delete" asp-route-id="@p.ProductId" method="post">
                        <input type="submit" class="btn btn-danger" value="Borrar">
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
