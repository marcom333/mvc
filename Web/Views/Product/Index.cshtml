@using Application.Entities;

@model List<Product>

<table class="table">
    <thead>
        <tr>
            <th colspan=3>Nombre</th>
        </tr>
        
    </thead>
    <tbody>
@for(int i = 0;i<@Model.Count();i++)
{
    
    
    <tr>
        
        
        <td>@Model[i].Name</td>

        <td>
            <form asp-controller="Product" method="POST">
            <input type="hidden" name="product_id" value="@Model[i].ProductId"/>
            <button class="btn btn-success" type="submit" asp-action  = "LoadUpdate">Update</button>
            <button class="btn btn-danger" type="submit" asp-action = "Delete">Delete</button>
            <a class="btn btn-primary" asp-action="Detail" asp-controller="Product" asp-route-product_id="@Model[i].ProductId">Details</a>
            </form>
        </td>
    </tr>
}

</tbody>
</table>
<a class="btn btn-primary" asp-action="Create" asp-controller="Product">Create</a>