@using Application.Entities
@model List<Product>

@if(ViewBag.Error != null){
    <div class="alert alert-danger" role="alert">
        Este producto est√° agotado.
    </div>
}

<a asp-action="Create" asp-controller="Product" class="btn btn-success">
    Add New Product
</a>
<hr>
<div class="table-responsive">
    <table class="table table-striped w-auto">
        <thead>
            <tr>
                <th>Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Product p in Model){
                <tr>
                    <td>
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@p.CategoryId">@p.Name</a>
                    </td>
                    <td>
                        <a asp-controller="Product" asp-action="Update" asp-route-id="@p.CategoryId" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>