@using Application.Entities

@model List<Product>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        <strong>danger</strong> @ViewBag.Error
    </div>
}



<div class="action-cards-container">
    <a asp-action="Create" class="action-card">
        <div class="action-card-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
            </svg>
        </div>
        <h3 class="action-card-title">Crear un Nuevo Producto</h3>
        <p class="action-card-description">Agrega un nuervo producto a tu inventario</p>
    </a>

