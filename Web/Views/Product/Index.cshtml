<div class="table-responsive">
    <table class="modern-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Price</td>
                    <td>
                        <a asp-action="Detail" asp-controller="Product" asp-route-id="1" class="btn btn-primary">Consultar</a>
                        <a asp-action="Update" asp-controller="Product" asp-route-id="1" class="btn btn-warning">Editar</a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="1" class="btn btn-danger">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>