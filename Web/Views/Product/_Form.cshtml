@using Application.Entities

@model Product;

@Html.Label("Nombre")
@Html.TextBoxFor(m => m.Name, "", new {@class="form-control"})

<div class="form-group">
    <label for="">Nombre</label>
    <input type="text" class="form-control" asp-for="Name">
    <small id="helpId" class="form-text text-muted">Help text</small>
</div>

<div class="form-group">
    <label for="">Precio</label>
    <input type="number" class="form-control" asp-for="Price">
    <small id="helpId" class="form-text text-muted">Help text</small>
</div>

<div class="form-group">
<label for="">Descripci√≥n</label>
<textarea class="form-control" name="Description" id="" rows="3">@Model.Description</textarea>
</div>

<div class="form-group">
    <label for="">User</label>
    <select class="form-control" asp-for="UserId">
        <option>Seleccione un usuario</option>
        @foreach(User u in ViewBag.Users){
            <option value="@u.UserId">@u.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <label for="">Category</label>
    <select class="form-control" asp-for="CategoryId">
        <option>Seleccione un usuario</option>
        @foreach(Category c in ViewBag.Categories){
            <option value="@c.CategoryId">@c.Name</option>
        }
    </select>
</div>