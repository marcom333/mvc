@using Application.Entities
@using Web.ViewModel

@model ProductCreateViewModel;

@Html.AntiForgeryToken()

<div class="form-group">
    <label for="">Nombre</label>
    <input type="text" class="form-control" asp-for="Name">
    <span class="form-text text-danger" asp-validation-for="Name"></span>
</div>

<div class="form-group">
    <label for="">Precio</label>
    <input type="number" class="form-control" asp-for="Price">
    <span class="form-text text-danger" asp-validation-for="Price"></span>
</div>

<div class="form-group">
    <label for="">Descripci√≥n</label>
    <textarea class="form-control" asp-for="Description"></textarea>
    <span class="form-text text-danger" asp-validation-for="Description"></span>
</div>

<div class="form-group">
    <label for="">User</label>
    <select class="form-control" asp-for="UserId">
        <option disabled>Seleccione un usuario</option>
        @foreach(User u in ViewBag.Users){
            <option value="@u.UserId">@u.Name</option>
        }
    </select>
    <span class="form-text text-danger" asp-validation-for="UserId"></span>
</div>
<div class="form-group">
    <label for="">Category</label>
    <select class="form-control" asp-for="CategoryId">
        <option selected disabled>Seleccione un usuario</option>
        @foreach(Category c in ViewBag.Categories){
            <option value="@c.CategoryId">@c.Name</option>
        }
    </select>
    <span class="form-text text-danger" asp-validation-for="CategoryId"></span>
</div>