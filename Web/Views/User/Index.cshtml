@{
    if(ViewBag.user != null)
        Layout = "~/Views/Shared/_Plantilla.cshtml";
    ViewData["Title"] = "Productos";
}

@using Application.Entities

@model List<User>

@if(ViewBag.Error!=null){
    <div class="alert alert-danger" role="alert">
        <strong>danger</strong> @ViewBag.Error
    </div>
}

<h1>Usuarios</h1>
<p>
    <a class="btn btn-success" asp-action="Create" asp-controller="User">Registrar</a>
</p>

<form action="">
    <div class="form-group">
        <label for="">Nombre</label>
        <input type="text" class="form-control" name="name" value="@ViewBag.SearchName">
    </div>
    <button type="submit" class="btn btn-success">Buscar</button>
</form>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach(User u in Model){
            <tr>
                <td>@u.Name</td>
                <td>@u.Email</td>
                <td>
                    <a asp-action="Detail" asp-controller="User" asp-route-id="@u.UserId" class="btn btn-primary">Consultar</a>
                    <a asp-action="Update" asp-controller="User" asp-route-id="@u.UserId" class="btn btn-warning">Editar</a>
                    <form asp-action="Delete" asp-route-id="@u.UserId" method="post">
                        <input type="submit" class="btn btn-danger" value="Borrar">
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>